---
import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
    <ClientRouter />
    <style is:global>
      @keyframes pageFadeIn {
        from { opacity: 0; }
        to { opacity: 1; }
      }
      @keyframes pageHold {
        from { opacity: 1; }
        to { opacity: 1; }
      }
    </style>
  </head>
  <body class="min-h-screen bg-sol-base3 text-sol-base00 overflow-hidden">
    <slot />
  </body>
</html>
