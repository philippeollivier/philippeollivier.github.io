---
import BaseLayout from '../layouts/BaseLayout.astro';

const buttons = ['Home', 'Gallery', 'Other'];
---

<BaseLayout title="Philippe Ollivier">
  <!-- Buttons: centered at 20% viewport, vertically centered -->
  <nav class="fixed top-1/2 -translate-y-1/2 flex flex-col gap-[20px]" style="left: 20%; transform: translate(-50%, -50%);">
    {buttons.map((label) => (
      <button
        class="w-[100px] h-[40px] border border-sol-base01 bg-transparent text-sol-base00 text-sm cursor-pointer hover:bg-sol-base2 transition-colors"
      >
        {label}
      </button>
    ))}
  </nav>

  <!-- GIF: centered, 2x point-scaled -->
  <main class="fixed top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2">
    <img
      src="/images/hero.gif"
      alt=""
      class="block"
      style="image-rendering: pixelated; transform: scale(2); transform-origin: center;"
    />
  </main>
</BaseLayout>
