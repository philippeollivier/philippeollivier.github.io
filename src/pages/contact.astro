---
import BaseLayout from '../layouts/BaseLayout.astro';

const pageTransition = {
  forwards: {
    old: [{ name: 'pageHold', duration: '0.6s' }],
    new: [{ name: 'pageFadeIn', duration: '0.6s', easing: 'ease-out' }],
  },
  backwards: {
    old: [{ name: 'pageHold', duration: '0.6s' }],
    new: [{ name: 'pageFadeIn', duration: '0.6s', easing: 'ease-out' }],
  },
};
---

